generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         Int       @id @default(autoincrement())
  quizzes    quizzes[]
  email      String    @unique
  first_name String?
  last_name  String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model quizzes {
  id        Int     @id @default(autoincrement())
  host_user users   @relation(fields: [users_id], references: [id])
  users_id  Int
  songs     songs[]
  type      String
}

model songs {
  id         Int     @id @default(autoincrement())
  quiz       quizzes @relation(fields: [quizzes_id], references: [id])
  quizzes_id Int
  spotify_id String
  title      String
  chorus_url String
}
